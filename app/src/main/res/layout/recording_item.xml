<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_label_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/selected_item_color"
    android:elevation="1dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/recording_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:text="Recording Name"
        android:textColor="@color/selected_text_color" />

    <TextView
        android:id="@+id/recording_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:text="date"
        android:textColor="@color/selected_text_color" />

</LinearLayout>
